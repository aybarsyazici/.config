# General idea: 
# Alt is the modifier for moving windows IN the current space.
# Ctrl is the modifier for moving windows ALONG spaces.
# Shift & cmd are extra modifiers

# changing window focus
alt - up : yabai -m window --focus north
alt - down : yabai -m window --focus south
alt - left : yabai -m window --focus west
alt - right : yabai -m window --focus east


# rotating the layout
shift + alt - r : yabai -m space --rotate 270

# flip along y axis 
shift + alt - y : yabai -m space --mirror y-axis

# flip along x axis 
shift + alt - x :  yabai -m space --mirror x-axis

# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# toggle window border
shift + alt - w : yabai -m window --toggle border

# Modifying window size
# # Maximize window:
shift + alt - f : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (reziez to occupy the same area)
shift + alt - e : yabai -m space --balance 

# Swapping windows
shift + alt - up : yabai -m window --swap north
shift + alt - down : yabai -m window --swap south
shift + alt - left :  yabai -m window --swap west
shift + alt - right : yabai -m window --swap east

# Splitting windows
cmd + alt - up : yabai -m window --warp north
cmd + alt - down : yabai -m window --warp south
cmd + alt - left : yabai -m window --warp west
cmd + alt - right: yabai -m window --warp east

########## SPACE SHORTCUTS BELOW ##############

# Move window to prev and next spac
ctrl + shift - right : yabai -m window --space next;
ctrl + shift - left : yabai -m window --space prev;

# Move window to specific space
ctrl + shift - 1 : yabai -m window --space 1;
ctrl + shift - 2 : yabai -m window --space 2;
ctrl + shift - 3 : yabai -m window --space 3;
ctrl + shift - 4 : yabai -m window --space 4;
ctrl + shift - 5 : yabai -m window --space 5;
ctrl + shift - 6 : yabai -m window --space 6;
ctrl + shift - 7 : yabai -m window --space 7;
ctrl + shift - 8 : yabai -m window --space 8;
